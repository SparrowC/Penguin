<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBottomLine"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_bar_no_line"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivMainChat"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1.0"
            android:src="@drawable/actionbar_icon"/>
        <ImageView
            android:id="@+id/ivMainContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_weight="1.0"
            android:src="@drawable/app_panel_add_icon"/>
        <ImageView
            android:id="@+id/ivMainTrend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_weight="1.0"
            android:src="@drawable/abc_ic_search" />
    </LinearLayout>

</LinearLayout>
